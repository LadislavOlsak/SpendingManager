<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".loyaltycards.LoyaltyCardActivity"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/loyalty_card_view_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">
        <ImageView
            android:id="@+id/loyalty_card_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/loyalty_card"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/loyalty_card_edit_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <include layout="@layout/activity_new_loyalty_card" />
    </LinearLayout>
    
</LinearLayout>