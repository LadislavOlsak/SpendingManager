<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/customborder"
    android:layout_margin="10dp"
    android:elevation="2dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="18sp"
            android:text="@string/last_transactions"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"/>
        <ImageView
            android:id="@+id/account_last_filter_iv"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_filter_list_black_24dp"
            android:contentDescription="@string/filter_transactions"/>
        <ToggleButton
            android:id="@+id/account_last_transaction_col_exp_tbtn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/collapse_expand_style"
            android:layout_margin="10dp"
            android:textOn=""
            android:textOff=""
            android:checked="false"
            android:focusable="false"
            android:focusableInTouchMode="false"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/account_last_transaction_content_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="4dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Date Range"/>
            <TextView
                android:id="@+id/account_last_transaction_date_range_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="01.04.2018 - 22.04.2018"/>
        </LinearLayout>
        <include layout="@layout/divider"/>
        <ListView
            android:id="@+id/account_last_transactions_lv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
</LinearLayout>